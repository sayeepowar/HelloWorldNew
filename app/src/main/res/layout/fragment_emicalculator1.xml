<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f48728"
    android:foregroundTint="#ffffff"
    android:foregroundTintMode="screen"
    tools:showIn="@layout/activity_emicalculator1"
    tools:context="com.sayaanand.helloworld.EMICalculatorActivity1Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/emi_fragment_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:scrollIndicators="start|right"


            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/emi_fragment_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMI :"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/emiValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <TextView
                android:id="@+id/emiChart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Principal v/s Interest Chart"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/sampleBarChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#e6e2e2"
                android:foreground="#f7ce90" />

            <TextView
                android:id="@+id/emiChart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Principal, Interest and Total Chart"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#e6e2e2"
                android:foreground="#f7ce90" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*">
                <TableRow>
                        <TextView
                            android:id="@+id/row1_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_margin"
                            android:text="row1_1"
                            android:textAppearance="?attr/textAppearanceListItem" />
                        <TextView
                            android:id="@+id/row1_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_margin"
                            android:text="row1_2"
                            android:textAppearance="?attr/textAppearanceListItem" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/row2_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="row2_1"
                        android:textAppearance="?attr/textAppearanceListItem" />
                    <TextView
                        android:id="@+id/row2_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="row2_2"
                        android:textAppearance="?attr/textAppearanceListItem" />
                </TableRow>

            </TableLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>